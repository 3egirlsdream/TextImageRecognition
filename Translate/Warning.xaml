<Window x:Class="Translate.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translate"
        mc:Ignorable="d"
        Background="{x:Null}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"  BorderThickness="30" FontFamily=".PingFang SC,Microsoft YaHei UI"
        Title="Warning" Height="160" Width="220">
    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="30" Opacity="0.4"/>
    </Window.Effect>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <Border Background="White" CornerRadius="5" Opacity="1" Grid.RowSpan="2"/>
        <Border x:Name="CLOSE" ToolTip="关闭" HorizontalAlignment="Left" Margin="10,10,0,0" Width="13" Height="13" Background="#FFB8B8B8" CornerRadius="13" MouseDown="CLOSE_MouseDown" VerticalAlignment="Top"/>
        <TextBlock Name="tb1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="幼圆" FontSize="13"/>

    </Grid>
</Window>
